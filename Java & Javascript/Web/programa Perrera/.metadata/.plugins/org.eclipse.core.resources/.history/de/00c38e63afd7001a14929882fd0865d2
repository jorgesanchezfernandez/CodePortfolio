package Perrera;

import java.util.List;

public class CentroProcesor implements ICentroProcesor {

	public List listaCentro(){
		return CentroStore.getInstance().getCentros();
	}
	
	public List listaAnimales(Centro centro){
		return centro.getAnimales();
	}
	
	public List listaAnimales(String nombreCentro) throws RangoException{
		List dev=null;
		try{
			dev=CentroStore.getInstance().getCentro(nombreCentro).getAnimales();
		}catch(Exception e){
			System.out.println("Ocurrio un error obteniendo la lista de animales para el centro dictado.");
		}
		return dev;
	}
	
}
